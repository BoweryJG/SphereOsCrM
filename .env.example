# SPHEREOS CRM Environment Variables
# Copy this file to .env.local and fill in your values

# ====================
# REQUIRED CONFIGURATION
# ====================

# Supabase Configuration (Required)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Supabase Database Connection (Required for migrations)
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_db_password_here

# Backend API Configuration
REACT_APP_BACKEND_URL=https://osbackend-zl1h.onrender.com

# ====================
# OPTIONAL FEATURES
# ====================

# Stripe Configuration (Optional - for subscription features)
STRIPE_PUBLISHABLE_KEY=pk_test_or_live_key_here
STRIPE_SECRET_KEY=sk_test_or_live_key_here
STRIPE_PRICE_ID_PROFESSIONAL_MONTHLY=price_id_here
STRIPE_PRICE_ID_PROFESSIONAL_ANNUAL=price_id_here
STRIPE_PRICE_ID_INSIGHTS_MONTHLY=price_id_here
STRIPE_PRICE_ID_INSIGHTS_ANNUAL=price_id_here
STRIPE_PRICE_ID_ENTERPRISE=price_id_here
STRIPE_SUCCESS_URL=https://your-app-url/subscribe/success
STRIPE_CANCEL_URL=https://your-app-url/subscribe/cancel

# OpenRouter API Key (Optional - for AI features)
REACT_APP_OPENROUTER_API_KEY=your_openrouter_api_key_here
REACT_APP_OPENROUTER_URL=https://openrouter.ai/api/v1

# Sphere1a API Configuration (Optional - for enhanced intelligence)
REACT_APP_SPHERE1A_API_KEY=your_sphere1a_api_key_here
REACT_APP_SPHERE1A_URL=https://api.sphere1a.com/v1

# Google Places API (Optional - for location features)
REACT_APP_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Yelp API (Optional - for business data)
REACT_APP_YELP_API_KEY=your_yelp_api_key_here

# Encryption Configuration
REACT_APP_ENCRYPTION_KEY=your-32-character-encryption-key

# Netlify Configuration (Optional - for production deployment)
NETLIFY_SITE_URL=https://your-netlify-site-url.netlify.app

# ====================
# LEGACY CONFIGURATION
# ====================

# Twilio Configuration (Legacy - for backward compatibility)
# Note: Twilio credentials are now managed per-user in the database
# Users should configure their own Twilio credentials in Settings â†’ Twilio
REACT_APP_TWILIO_FUNCTION_URL=https://your-twilio-function.twil.io
REACT_APP_TWILIO_API_KEY=your_twilio_api_key_here
REACT_APP_TWILIO_PHONE_NUMBER=+1234567890
REACT_APP_TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
REACT_APP_TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
REACT_APP_TWILIO_RECORDING_CALLBACK=https://your-app-url/api/twilio/recording
REACT_APP_TWILIO_TRANSCRIPTION_CALLBACK=https://your-app-url/api/twilio/transcription

# ====================
# NOTES
# ====================
# 1. Never commit .env.local to version control
# 2. Keep your API keys secure
# 3. Use different keys for development and production
# 4. Rotate keys regularly for security
# 5. Twilio credentials are now stored per-user in the database